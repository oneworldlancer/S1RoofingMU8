<?xml version="1.0" encoding="UTF-8"?>
<popup:BasePopupPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                     xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                     xmlns:popup="clr-namespace:MauiPopup.Views;assembly=MauiPopup"
                     xmlns:animations="http://rotorgames.com"
                     x:Class="S1RoofingMU.iSRoofingApp.iSRoofing_Popup.Popup_List_PickUp_Generic"
                     ForegroundColor="Transparent"
                     BackgroundColor="Transparent"
                     HorizontalOptions="FillAndExpand"
                     VerticalOptions="FillAndExpand">
    <!--Default Animation-->
    <!--<popup:BasePopupPage.Animation>
		<animations:ScaleAnimation PositionIn="Center"
								   PositionOut="Center"
								   ScaleIn="1.2"
								   ScaleOut="0.8"
								   DurationIn="400"
								   DurationOut="300"
								   EasingIn="SinOut"
								   EasingOut="SinIn"
								   HasBackgroundAnimation="False" />
	</popup:BasePopupPage.Animation>-->
    <!---->
    <!--RowDefinitions="20*,60*,20*"-->
    <Grid   x:Name="grd_Container"
            HorizontalOptions="CenterAndExpand"
            VerticalOptions="CenterAndExpand"
            BackgroundColor="Transparent"
            RowDefinitions="10*,80*,10*">
        <BoxView HorizontalOptions="FillAndExpand"
                 VerticalOptions="FillAndExpand"
                 BackgroundColor="Transparent"
                 Color="Transparent"
                 Grid.Row="0">
            <BoxView.GestureRecognizers>
                <TapGestureRecognizer Tapped="btn_Popup_OK_Tapped" />
            </BoxView.GestureRecognizers>
        </BoxView>
        <!--HorizontalOptions="Center"
			   VerticalOptions="Start"-->
        <Frame  HorizontalOptions="FillAndExpand"
                VerticalOptions="CenterAndExpand"
                BackgroundColor="Silver"
                BorderColor="Transparent"
                Margin="20,0,20,0"
                Padding="0"
                CornerRadius="5"
                HasShadow="True"
                Grid.Row="1">
           <!--HeightRequest="500"-->     <Grid HorizontalOptions="FillAndExpand"
                  VerticalOptions="FillAndExpand"
              >
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="50"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                
                <!--HeightRequest="500"-->
                
                <StackLayout HorizontalOptions="FillAndExpand"
                             VerticalOptions="FillAndExpand"
                             Orientation="Vertical"
                             Spacing="0"
                             Margin="0"
                             Padding="0"
                             Grid.Row="0"
                             Grid.Column="0">
                    <CollectionView x:Name="MyCollection"
                                    HorizontalOptions="FillAndExpand"
                                    VerticalOptions="FillAndExpand"
                                    EmptyView=""
                                    SelectionMode="Single"
                                    SelectionChanged="OnCollectionViewSelectionChanged">
                        <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <!--<Border HorizontalOptions="FillAndExpand"
                                    BackgroundColor="{StaticResource iAppColor_Transparent}"
                                    Margin="0,0,0,0"
                                    HeightRequest="60"
                                    Padding="5">-->
                                    
                                <StackLayout HorizontalOptions="FillAndExpand"
                                             VerticalOptions="FillAndExpand"
                                             Spacing="0"
                                             Margin="0"
                                             Padding="0"
                                             HeightRequest="50"
                                             Orientation="Vertical"
                                             BackgroundColor="Silver">
                                                 
                                    <VisualStateManager.VisualStateGroups>
                                    <VisualStateGroup Name="CommonStates">
                                        <VisualState Name="Selected">
                                            <VisualState.Setters>
                                                <Setter Property="BackgroundColor"
                                                        Value="Transparent" />
                                            </VisualState.Setters>
                                        </VisualState>
                                    </VisualStateGroup>
                                </VisualStateManager.VisualStateGroups>
                        
                                                  <Label x:Name="lbl_CountryName"
                                           HorizontalOptions="FillAndExpand"
                                           VerticalOptions="FillAndExpand"
                                                         HeightRequest="49"
                                               TextColor="{StaticResource iAppColor_White}"
                                               Text="{Binding ItemText}"
                                               FontSize="Medium"
                                               HorizontalTextAlignment="Start"
                                               LineBreakMode="TailTruncation"
                                               VerticalTextAlignment="Center"
                                               Grid.Column="0"
                                               Padding="5,0,5,0" />
                                                        <BoxView HorizontalOptions="FillAndExpand"
                                             HeightRequest="1"
                                             Color="White"
                                             Opacity=".5" />
                                    
                                    <!--<Grid HorizontalOptions="FillAndExpand"
                                          VerticalOptions="Center">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="49" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                    
                                    </Grid>-->
                               
                                </StackLayout>
                            <!--</Border>-->
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                    </CollectionView>
                    <!--<Label Text="zzz" />-->
                </StackLayout>
            
                <Frame HorizontalOptions="FillAndExpand"
                       HeightRequest="50"
                       BorderColor="{StaticResource iAppColor_LightOrange}"
                       Padding="1"
                       CornerRadius="0"
                       Margin="0"
                       BackgroundColor="{StaticResource iAppColor_LightOrange}"
                       Grid.Row="1"
                       Grid.Column="0">
                    <StackLayout Orientation="Horizontal"
                                 Padding="10,0,10,0">
                        <!--Clicked="btnCountryList_Clicked"-->
                        <Label x:Name="btn_Popup_OK"
                               HorizontalOptions="FillAndExpand"
                               HeightRequest="50"
                               HorizontalTextAlignment="Center"
                               VerticalTextAlignment="Center"
                               Text="CANCEL"
                               FontAttributes="Bold"
                               FontSize="Medium"
                               BackgroundColor="Transparent"
                               TextColor="{StaticResource iAppColor_White}">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="btn_Popup_OK_Tapped" />
                            </Label.GestureRecognizers>
                        </Label>
                    </StackLayout>
                </Frame>
          
            </Grid>
        </Frame>
        <BoxView HorizontalOptions="FillAndExpand"
                 BackgroundColor="Transparent"
                 VerticalOptions="FillAndExpand"
                 Color="Transparent"
                 Grid.Row="2">
            <BoxView.GestureRecognizers>
                <TapGestureRecognizer Tapped="btn_Popup_OK_Tapped" />
            </BoxView.GestureRecognizers>
        </BoxView>
    </Grid>
</popup:BasePopupPage>