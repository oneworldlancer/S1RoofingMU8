											<ColumnDefinition Width="10" />
											<ColumnDefinition Width="60" />
											<ColumnDefinition Width="5" />-->

										</Grid.ColumnDefinitions>


										<!--Source="eg.png"-->
										<!--<Image x:Name="img_Flag"
											   WidthRequest="25"
											   HeightRequest="15"
											   Source="{Binding CountryFlagSmall}"
