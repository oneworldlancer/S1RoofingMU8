                                   HorizontalOptions="EndAndExpand"
                                   WidthRequest="80"
                                   HeightRequest="40"
                                   BackgroundColor="Red"
                             CornerRadius="5"  
                                   HasShadow="True"
                                   Margin="10"
                                   Padding="0">
                               
                            </Frame>-->


                        </StackLayout>
                    </Grid>


                    <!--<swipeRight:UCView_Swipe_Right />-->

                    <BoxView  HorizontalOptions="FillAndExpand"
									  HeightRequest="1"
									  Margin="80,5,10,5"
									  Color="{StaticResource iAppColor_Transparent}"
									  Opacity=".5" />


                </StackLayout>



            </StackLayout>


        </Border>
    </Border>



    <!--</SwipeView>-->

</ContentView>