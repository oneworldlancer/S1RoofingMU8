                    <SwipeItem BackgroundColor="{StaticResource iAppColor_System_Page_BackgrondColor_Primary}"
                               Command="{Binding Command_Chat_ByUser, Source={x:Reference vw_GalleryRowView}}"
                               CommandParameter="{Binding .}" />
