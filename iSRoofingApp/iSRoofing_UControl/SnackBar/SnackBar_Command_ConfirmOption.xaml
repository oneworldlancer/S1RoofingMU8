                                     Margin="0">
                            <StackLayout   HorizontalOptions="FillAndExpand"
                                           Orientation="Horizontal"
                                           Margin="0,0,5,0">
                                <StackLayout Orientation="Horizontal"
                                             WidthRequest="40">
                                    <ImageButton	 x:Name="img_Close"
                                                     HorizontalOptions="Center"
