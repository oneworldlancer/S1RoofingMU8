<?xml version="1.0" encoding="UTF-8"?>
<ContentView x:Name="vw_ChatRowView"
			 xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns:swipeRight="clr-namespace:S1RoofingMU.iSRoofingApp.iSRoofing_UControl.Swipe" xmlns:ctl="clr-namespace:S1RoofingMU.iSRoofingApp.iSRoofing_RowModel.ScreenChatShow"
              
             x:Class="S1RoofingMU.iSRoofingApp.iSRoofing_RowModel.ScreenChatShow.Row_ScreenChatShow_Message_Audio_Box_Owner_View"
     Visual="Material" >

    <StackLayout  HorizontalOptions="EndAndExpand"
					   VerticalOptions="StartAndExpand"
					   
        Spacing="0"
        Padding="0"
        Margin="0">
        <Frame HorizontalOptions="EndAndExpand"
					   VerticalOptions="StartAndExpand"
					   Padding="10"
					   Margin="0,10,55,0"
					   CornerRadius="5"
               HasShadow="True"
					   BackgroundColor="{StaticResource iAppColor_Silver}">

            <Label x:Name="lbl_MessageText" 
                                   TextColor="Black"
                                   
                                   Text="Hello world..."/>

        </Frame>

        <Grid x:Name="grd_Media" 
     HorizontalOptions="FillAndExpand"
								 VerticalOptions="FillAndExpand"
                       Margin="0,10,55,0"
          >



            <Frame HorizontalOptions="FillAndExpand"
								 VerticalOptions="FillAndExpand"
								 Padding="5"
					   Margin="0"
					   CornerRadius="5"
                           HasShadow="True"
					   BackgroundColor="{StaticResource iAppColor_Opacity_White}"
                           BorderColor="{StaticResource iAppColor_LightSilver}">
                <Grid  ColumnDefinitions="70,*">
                    <Image x:Name="img_Thum"
                                                HorizontalOptions="FillAndExpand"
                                                VerticalOptions="FillAndExpand"
                                                WidthRequest="50"
                                                HeightRequest="50"
                                                BackgroundColor="Transparent"
                                                Source="icon_chat_share_audio_x1.png"
                                                Margin="5"
                                                Aspect="AspectFit"
                                                Grid.Column="0" />
                    <StackLayout  HorizontalOptions="StartAndExpand"
                                  VerticalOptions="StartAndExpand"
                                  Spacing="0"
                                  Margin="0"
                                  Orientation="Vertical"
                                  Padding="0"
                                  Grid.Column="1">
                        <Label x:Name="lbl_FileTitle"
                               TextColor="{StaticResource iAppColor_SemiOrange}"
                               Margin="0,10,10,0"
                               Text="Hello world.doc" />
                        <Label x:Name="lbl_FileSize"
                               TextColor="{StaticResource iAppColor_SemiOrange}"
                               Margin="0,5,10,0"
                               Text="200 KB" />
                    </StackLayout>
                </Grid>
            </Frame>

            <!--<ImageButton HorizontalOptions="End"
								 VerticalOptions="Start"
					   Margin="10"
                     CornerRadius="5"   
                       Source="img_menu_white.png" 
                                 WidthRequest="40"
                                 HeightRequest="40"
                                 BackgroundColor="{StaticResource iAppColor_Opacity_Black}"/>-->

        </Grid>
    </StackLayout>



</ContentView>