                                    <Label.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Command_Chatter_ByUser, Source={x:Reference Name=vw_ChatterRowView}}"
                                                          CommandParameter="{Binding .}" />
                                    </Label.GestureRecognizers>
                                </Label>-->

                            <!--Clicked="btn_Command_Clicked"-->
