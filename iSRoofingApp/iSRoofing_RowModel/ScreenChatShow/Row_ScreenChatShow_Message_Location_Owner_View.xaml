                      Orientation="Vertical"
                      Spacing="0"
                      Margin="0"
                      Padding="0">
            <ctl:Row_ScreenChatShow_Message_UserName_Owner_View iOwnerModel="{Binding iOwnerModel, Source={x:Reference vw_ChatRow_Location_Owner_View}}"
