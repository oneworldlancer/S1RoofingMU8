											   Source="{Binding CountryFlagSmall}"
											   Grid.Row="0"
											   Grid.Column="1"
											   HorizontalOptions="Start"
											   VerticalOptions="Center" />

										<Label x:Name="lbl_CountryName"
											   HorizontalOptions="FillAndExpand"
