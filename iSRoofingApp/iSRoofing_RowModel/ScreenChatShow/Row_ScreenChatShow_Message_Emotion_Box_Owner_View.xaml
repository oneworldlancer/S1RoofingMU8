<?xml version="1.0" encoding="UTF-8"?>
<ContentView x:Name="vw_ChatRowView"
			 xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns:swipeRight="clr-namespace:S1RoofingMU.iSRoofingApp.iSRoofing_UControl.Swipe" xmlns:ctl="clr-namespace:S1RoofingMU.iSRoofingApp.iSRoofing_RowModel.ScreenChatShow"
             x:Class="S1RoofingMU.iSRoofingApp.iSRoofing_RowModel.ScreenChatShow.Row_ScreenChatShow_Message_Emotion_Box_Owner_View">
	<ContentView.Content>

        <Frame HorizontalOptions="EndAndExpand"
					   VerticalOptions="StartAndExpand"
					   Padding="10"
					   Margin="0,10,65,0"
					   CornerRadius="5"
               HasShadow="False"
					   BackgroundColor="{StaticResource iAppColor_Transparent}">
<!--emo32.png-->
            <Image x:Name="img_Emotion" 
                   HeightRequest="50"
                   WidthRequest="50"
                                  Source="{Binding MessageText, StringFormat='{0}.png'}"/>

        </Frame>
    </ContentView.Content>
</ContentView>