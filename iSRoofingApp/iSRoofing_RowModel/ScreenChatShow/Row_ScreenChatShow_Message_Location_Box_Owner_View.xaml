               Padding="10"
               Margin="0,10,40,0"
               CornerRadius="5"
               HasShadow="True"
               BackgroundColor="{StaticResource iAppColor_Silver}"
               BorderColor="Transparent">
            <StackLayout HorizontalOptions="EndAndExpand"
                         VerticalOptions="StartAndExpand"
                         Orientation="Vertical"
                         Spacing="0"
                         Margin="0"
                         Padding="0">
            
