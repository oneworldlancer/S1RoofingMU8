                        <StackLayout
                                    Orientation="Horizontal"
                                    BackgroundColor="{StaticResource iAppColor_White}"
                                    Padding="0"
										 Spacing="0"
										 Margin="0">

                            <Entry x:Name="txt_Pswd2"
                                        HorizontalOptions="FillAndExpand"
                                        HeightRequest="50"
                                        Placeholder="*"
                                        FontSize="Large"
                                        MaxLength="1"
                                        TextColor="{StaticResource iAppColor_OpacityOrange}"
                                        PlaceholderColor="{StaticResource iAppColor_OpacityOrange}"
                                        VerticalTextAlignment="Center"  
                                        BackgroundColor="Transparent"
                                        HorizontalTextAlignment="Center"
                                         
                                        IsPassword="true" 
                                        ReturnType="Next"
                                                     
                                                    Focused="txt_Pswd2_Focussed"
                                        TextChanged="txt_Pswd2_TextChanged"/>

                        </StackLayout>

                    </Frame>
                  
                 
                    <Frame      x:Name="frm_Pswd3"
                                HorizontalOptions="FillAndExpand"
                                HeightRequest="50"
                               CornerRadius="5"
								HasShadow="True"
								BorderColor="{StaticResource iAppColor_SemiOrange}"
                                Padding="1"
                                Margin="1"
                                BackgroundColor="{StaticResource iAppColor_White}"
                                Grid.Column="2">


                        <StackLayout
                                    Orientation="Horizontal"
                                    BackgroundColor="{StaticResource iAppColor_White}"
                                    Padding="0"
										 Spacing="0"
										 Margin="0">

                            <Entry x:Name="txt_Pswd3"
                                        HorizontalOptions="FillAndExpand"
                                        HeightRequest="50"
                                        Placeholder="*"
                                       FontSize="Large"
                                        MaxLength="1"
                                         TextColor="{StaticResource iAppColor_OpacityOrange}"
                                        PlaceholderColor="{StaticResource iAppColor_OpacityOrange}"
                                        BackgroundColor="Transparent"
                                  VerticalTextAlignment="Center"           HorizontalTextAlignment="Center"
                                        
                                        IsPassword="true" 
                                       ReturnType="Next"
                                              
                                                    
                                                       Focused="txt_Pswd3_Focussed"
                                                    TextChanged="txt_Pswd3_TextChanged"/>

                        </StackLayout>

                    </Frame>
                 
                 
                    <Frame      x:Name="frm_Pswd4"
                                HorizontalOptions="FillAndExpand"
                                HeightRequest="50"
                               CornerRadius="5"
								HasShadow="True"
								BorderColor="{StaticResource iAppColor_SemiOrange}"
                                Padding="1"
                                Margin="1"
                                BackgroundColor="{StaticResource iAppColor_White}"
                                Grid.Column="3">


                        <StackLayout
                                    Orientation="Horizontal"
                                    BackgroundColor="{StaticResource iAppColor_White}"
                                    Padding="0"
										 Spacing="0"
										 Margin="0">

                            <Entry x:Name="txt_Pswd4"
                                        HorizontalOptions="FillAndExpand"
                                        HeightRequest="50"
                                        Placeholder="*"
                                       FontSize="Large"
                                        MaxLength="1"
                                         TextColor="{StaticResource iAppColor_OpacityOrange}"
                                        PlaceholderColor="{StaticResource iAppColor_OpacityOrange}"
                                        BackgroundColor="Transparent"
                                  VerticalTextAlignment="Center"         
                                                    HorizontalTextAlignment="Center"
                                        
                                        IsPassword="true" 
                                       ReturnType="Next"
                                              
                                                    
                                                       Focused="txt_Pswd4_Focussed"
                                                    TextChanged="txt_Pswd4_TextChanged"/>

                        </StackLayout>

                    </Frame>
                 
                  
                    <!--<Frame    x:Name="frm_Pswd4"
                              HorizontalOptions="FillAndExpand"
                                HeightRequest="50"
                               CornerRadius="5"
								HasShadow="True"
								BorderColor="{StaticResource iAppColor_SemiOrange}"
                                Padding="1"
                                Margin="0"
                                BackgroundColor="{StaticResource iAppColor_White}"
                                Grid.Column="3">


                        <StackLayout
                                    Orientation="Horizontal"
                                    BackgroundColor="{StaticResource iAppColor_White}"
