                   Padding="0"
                   Margin="0"
                   CornerRadius="5"
                   HasShadow="False"
                   BackgroundColor="{StaticResource iAppColor_Transparent}"
                   BorderColor="{StaticResource iAppColor_Transparent}">
                <Grid  HorizontalOptions="FillAndExpand"
                       VerticalOptions="StartAndExpand"
