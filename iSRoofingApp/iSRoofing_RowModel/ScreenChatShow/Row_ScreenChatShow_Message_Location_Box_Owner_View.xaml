                </Image>
            </Frame>
            <Image x:Name="img_Flag"
                                        HorizontalOptions="End"
                                        VerticalOptions="End"
                                        BackgroundColor="Transparent"
                                        WidthRequest="50"    
                                        HeightRequest="50"
                               Margin="5"         Source="img_theme_map_home_black.png"     
